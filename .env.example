# OpenAI API Key (required for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Authentication Configuration
# Set to "false" to disable Google OAuth for development
AUTH_ENABLED=true

# Optional: Streamlit configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Optional: PandasAI configuration
PANDASAI_API_KEY=your_pandasai_api_key_if_different

# Optional: OpenAI Model Configuration
OPENAI_MODEL=gpt-4o-mini

# Optional: Logging level
LOG_LEVEL=INFO

# ========================================
# Docker & Deployment Configuration
# ========================================

# GitHub Container Registry (for local Docker builds)
GITHUB_TOKEN=ghp_your_github_token_here
DOCKER_REGISTRY=ghcr.io/gahoccode
IMAGE_NAME=finance-bro

# Render.com Deployment Configuration
RENDER_API_KEY=your_render_api_key_here
RENDER_SERVICE_ID=srv-your_service_id_here

# Alternative deployment platforms (optional)
RAILWAY_TOKEN=your_railway_token_here
FLY_API_TOKEN=your_fly_api_token_here
